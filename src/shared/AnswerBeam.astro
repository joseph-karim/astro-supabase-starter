<svg viewBox="0 0 600 600" xmlns="http://www.w3.org/2000/svg" role="img" aria-label="Answer Beam - Becoming the cited source" style="width:100%;height:auto">
  <defs>
    <linearGradient id="beamGrad" x1="0" x2="1">
      <stop offset="0" stop-color="#5A3AF5">
        <animate attributeName="stop-color" values="#5A3AF5;#7A5CFF;#5A3AF5" dur="3s" repeatCount="indefinite"/>
      </stop>
      <stop offset="1" stop-color="#31D0C6">
        <animate attributeName="stop-color" values="#31D0C6;#5FE5D9;#31D0C6" dur="3s" repeatCount="indefinite"/>
      </stop>
    </linearGradient>
    <linearGradient id="gridGrad" x1="0" y1="0" x2="0" y2="1">
      <stop offset="0" stop-color="#1A1033" stop-opacity="0.8"/>
      <stop offset="1" stop-color="#0A0B0D" stop-opacity="1"/>
    </linearGradient>
    <radialGradient id="glowGrad" cx="50%" cy="50%">
      <stop offset="0" stop-color="#7A5CFF" stop-opacity="0.6"/>
      <stop offset="70%" stop-color="#5A3AF5" stop-opacity="0.2"/>
      <stop offset="100" stop-color="transparent"/>
    </radialGradient>
    <filter id="glow">
      <feGaussianBlur stdDeviation="4" result="coloredBlur"/>
      <feMerge>
        <feMergeNode in="coloredBlur"/>
        <feMergeNode in="SourceGraphic"/>
      </feMerge>
    </filter>
  </defs>

  <rect width="600" height="600" fill="url(#gridGrad)" rx="24"/>

  <g opacity="0.3">
    <line x1="0" y1="100" x2="600" y2="100" stroke="#1B1F29" stroke-width="1"/>
    <line x1="0" y1="200" x2="600" y2="200" stroke="#1B1F29" stroke-width="1"/>
    <line x1="0" y1="300" x2="600" y2="300" stroke="#1B1F29" stroke-width="2"/>
    <line x1="0" y1="400" x2="600" y2="400" stroke="#1B1F29" stroke-width="1"/>
    <line x1="0" y1="500" x2="600" y2="500" stroke="#1B1F29" stroke-width="1"/>
    <line x1="100" y1="0" x2="100" y2="600" stroke="#1B1F29" stroke-width="1"/>
    <line x1="200" y1="0" x2="200" y2="600" stroke="#1B1F29" stroke-width="1"/>
    <line x1="300" y1="0" x2="300" y2="600" stroke="#1B1F29" stroke-width="2"/>
    <line x1="400" y1="0" x2="400" y2="600" stroke="#1B1F29" stroke-width="1"/>
    <line x1="500" y1="0" x2="500" y2="600" stroke="#1B1F29" stroke-width="1"/>
  </g>

  <circle cx="120" cy="300" r="80" fill="url(#glowGrad)">
    <animate attributeName="r" values="80;90;80" dur="4s" repeatCount="indefinite"/>
    <animate attributeName="opacity" values="0.4;0.7;0.4" dur="4s" repeatCount="indefinite"/>
  </circle>

  <circle cx="480" cy="300" r="100" fill="url(#glowGrad)">
    <animate attributeName="r" values="100;110;100" dur="4s" begin="0.5s" repeatCount="indefinite"/>
    <animate attributeName="opacity" values="0.5;0.8;0.5" dur="4s" begin="0.5s" repeatCount="indefinite"/>
  </circle>

  <path d="M 120 300 L 480 300" stroke="url(#beamGrad)" stroke-width="24" stroke-linecap="round" filter="url(#glow)" opacity="0.9">
    <animate attributeName="stroke-width" values="24;28;24" dur="2s" repeatCount="indefinite"/>
  </path>

  <circle cx="120" cy="300" r="6" fill="#31D0C6" opacity="0.9">
    <animate attributeName="cx" values="120;480" dur="2.5s" repeatCount="indefinite"/>
    <animate attributeName="opacity" values="0;0.9;0" dur="2.5s" repeatCount="indefinite"/>
  </circle>
  <circle cx="120" cy="300" r="5" fill="#7A5CFF" opacity="0.9">
    <animate attributeName="cx" values="120;480" dur="2.8s" begin="0.3s" repeatCount="indefinite"/>
    <animate attributeName="opacity" values="0;0.9;0" dur="2.8s" begin="0.3s" repeatCount="indefinite"/>
  </circle>
  <circle cx="120" cy="300" r="4" fill="#A08BFF" opacity="0.9">
    <animate attributeName="cx" values="120;480" dur="2.2s" begin="0.7s" repeatCount="indefinite"/>
    <animate attributeName="opacity" values="0;0.9;0" dur="2.2s" begin="0.7s" repeatCount="indefinite"/>
  </circle>
  <circle cx="120" cy="300" r="5" fill="#31D0C6" opacity="0.9">
    <animate attributeName="cx" values="120;480" dur="3s" begin="1.2s" repeatCount="indefinite"/>
    <animate attributeName="opacity" values="0;0.9;0" dur="3s" begin="1.2s" repeatCount="indefinite"/>
  </circle>
  <circle cx="120" cy="300" r="6" fill="#5A3AF5" opacity="0.9">
    <animate attributeName="cx" values="120;480" dur="2.6s" begin="1.6s" repeatCount="indefinite"/>
    <animate attributeName="opacity" values="0;0.9;0" dur="2.6s" begin="1.6s" repeatCount="indefinite"/>
  </circle>

  <circle cx="120" cy="300" r="28" fill="#111319" stroke="#5A3AF5" stroke-width="4">
    <animate attributeName="r" values="28;32;28" dur="2s" repeatCount="indefinite"/>
  </circle>
  <text x="120" y="310" text-anchor="middle" fill="#D7D2FF" font-family="'Space Grotesk',sans-serif" font-size="18" font-weight="700">You</text>

  <g opacity="0">
    <animate attributeName="opacity" values="0;1" dur="0.5s" begin="1s" fill="freeze"/>
    <circle cx="480" cy="300" r="38" fill="#111319" stroke="url(#beamGrad)" stroke-width="5"/>
    <circle cx="480" cy="300" r="20" fill="url(#beamGrad)">
      <animate attributeName="r" values="20;24;20" dur="2s" repeatCount="indefinite"/>
    </circle>
  </g>

  <g opacity="0">
    <animate attributeName="opacity" values="0;1" dur="0.5s" begin="1.5s" fill="freeze"/>
    <text x="480" y="370" text-anchor="middle" fill="#F3F1FF" font-family="'Space Grotesk',sans-serif" font-size="20" font-weight="800">The Answer</text>
    <text x="480" y="395" text-anchor="middle" fill="#9EA3C7" font-family="'Inter',sans-serif" font-size="14" font-weight="500">(Cited Source)</text>
  </g>

  <g opacity="0">
    <animate attributeName="opacity" values="0;1" dur="0.5s" begin="2s" fill="freeze"/>
    <rect x="200" y="130" width="200" height="50" rx="8" fill="#111319" stroke="#1B1F29" stroke-width="2"/>
    <text x="300" y="162" text-anchor="middle" fill="#31D0C6" font-family="'Inter',sans-serif" font-size="14" font-weight="600">Claim → Evidence → Schema</text>
  </g>
</svg>
