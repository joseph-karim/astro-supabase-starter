---
import Layout from "../../components/Layout.astro";
import JSONLD from "../../components/JSONLD.astro";
import ProofTable from "../../components/ProofTable.astro";
import { supabase } from "../../utils/database";

export const prerender = false;

const { slug } = Astro.params;

if (!supabase || !slug) {
  return Astro.redirect("/");
}

const { data, error } = await supabase
  .from("claims")
  .select("*")
  .eq("slug", slug)
  .eq("published", true)
  .maybeSingle();

if (error || !data) {
  return Astro.redirect("/");
}

const graph = data.jsonld ?? [];
const proofTableData = data.proof_table as { rows?: Array<Record<string, string | number>> } | null;
const rows = proofTableData?.rows ?? [];
const quotes: string[] = data.pull_quotes ?? [];
---

<Layout title={`${data.h1} — Become the Answer`}>
  <JSONLD graph={graph} />

  <style>
    .claim-card {
      background: #111319;
      border: 1px solid #1B1F29;
      border-radius: 16px;
      padding: 40px;
      box-shadow: 0 1px 0 #1B1F29 inset, 0 10px 30px rgba(0,0,0,.35);
    }

    .kicker {
      font-family: 'Inter', sans-serif;
      font-size: 12px;
      font-weight: 700;
      letter-spacing: 0.14em;
      text-transform: uppercase;
      color: #9EA3C7;
      margin-bottom: 12px;
    }

    .claim-title {
      font-family: 'Space Grotesk', sans-serif;
      font-size: 42px;
      font-weight: 800;
      line-height: 1.15;
      letter-spacing: -0.02em;
      color: #F3F1FF;
      margin-bottom: 16px;
    }

    .claim-summary {
      font-family: 'Inter', sans-serif;
      font-size: 18px;
      font-weight: 500;
      line-height: 1.5;
      letter-spacing: -0.01em;
      color: #D7D2FF;
    }

    .section-title {
      font-family: 'Space Grotesk', sans-serif;
      font-size: 28px;
      font-weight: 700;
      letter-spacing: -0.01em;
      color: #F3F1FF;
      margin-bottom: 16px;
    }

    .usage-card {
      background: #111319;
      border: 1px solid #1B1F29;
      border-radius: 16px;
      padding: 32px;
      box-shadow: 0 1px 0 #1B1F29 inset, 0 10px 30px rgba(0,0,0,.35);
    }

    .usage-list {
      list-style: none;
      counter-reset: usage-counter;
      margin-left: 0;
      padding-left: 0;
    }

    .usage-list li {
      counter-increment: usage-counter;
      position: relative;
      padding-left: 44px;
      margin-bottom: 20px;
      font-family: 'Inter', sans-serif;
      font-size: 16px;
      line-height: 1.6;
      color: #D7D2FF;
    }

    .usage-list li::before {
      content: counter(usage-counter);
      position: absolute;
      left: 0;
      top: 0;
      width: 32px;
      height: 32px;
      background: linear-gradient(135deg, #5A3AF5 0%, #7A5CFF 100%);
      border-radius: 8px;
      display: flex;
      align-items: center;
      justify-content: center;
      font-weight: 700;
      font-size: 14px;
      color: #F3F1FF;
    }

    .quote-card {
      background: linear-gradient(135deg, rgba(90,58,245,0.08) 0%, rgba(122,92,255,0.05) 100%);
      border: 1px solid #39206B;
      border-radius: 16px;
      padding: 32px;
      box-shadow: 0 1px 0 rgba(90,58,245,0.1) inset;
    }

    .quote-text {
      font-family: 'Inter', sans-serif;
      font-size: 17px;
      font-style: italic;
      line-height: 1.6;
      color: #D7D2FF;
      border-left: 3px solid #7A5CFF;
      padding-left: 24px;
      margin-bottom: 16px;
    }

    .quote-footer {
      font-family: 'Inter', sans-serif;
      font-size: 14px;
      font-style: normal;
      font-weight: 600;
      color: #9EA3C7;
      padding-left: 24px;
    }

    .download-link {
      display: inline-flex;
      align-items: center;
      gap: 8px;
      margin-top: 16px;
      padding: 12px 20px;
      background: rgba(90,58,245,0.1);
      border: 1px solid #39206B;
      border-radius: 10px;
      color: #7A5CFF;
      font-family: 'Inter', sans-serif;
      font-size: 14px;
      font-weight: 600;
      text-decoration: none;
      transition: all 0.2s cubic-bezier(.2,.6,.2,1);
    }

    .download-link:hover {
      background: rgba(90,58,245,0.15);
      border-color: #5A3AF5;
      color: #9B7FFF;
      transform: translateY(-1px);
      text-decoration: none;
    }

    .btn-cta {
      display: inline-block;
      background: linear-gradient(135deg, #5A3AF5 0%, #7A5CFF 55%, #31D0C6 100%);
      color: #0B0C10;
      padding: 16px 32px;
      border-radius: 12px;
      font-family: 'Inter', sans-serif;
      font-size: 16px;
      font-weight: 700;
      letter-spacing: -0.01em;
      text-decoration: none;
      transition: all 0.2s cubic-bezier(.2,.6,.2,1);
      box-shadow: 0 0 0 0 rgba(122,92,255,0.4);
    }

    .btn-cta:hover {
      filter: brightness(1.1);
      box-shadow: 0 0 0 8px rgba(122,92,255,0.15);
      transform: translateY(-2px);
      text-decoration: none;
    }

    .btn-cta:active {
      transform: translateY(0);
    }

    @media (max-width: 768px) {
      .claim-title {
        font-size: 32px;
      }
      .claim-card {
        padding: 28px 20px;
      }
      .usage-card, .quote-card {
        padding: 24px 20px;
      }
    }
  </style>

  <div class="mx-auto max-w-3xl px-6 py-12">
    <div class="claim-card">
      <p class="kicker">CLAIM</p>
      <h1 class="claim-title">{data.h1}</h1>
      <p class="claim-summary">{data.tl_dr}</p>
    </div>

    <section class="mt-10">
      <h2 class="section-title">Proof snapshot</h2>
      <ProofTable rows={rows} />
      {data.csv_url && (
        <a
          class="download-link"
          href={data.csv_url}
          download
        >
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4"></path>
          </svg>
          Download CSV
        </a>
      )}
    </section>

    <section class="mt-10 usage-card">
      <h2 class="section-title">How to use it</h2>
      <ol class="usage-list">
        <li>State the claim in ≤18 tokens up top.</li>
        <li>Attach the data (table + CSV).</li>
        <li>Add JSON-LD and keep it fresh monthly.</li>
      </ol>
    </section>

    {quotes.length > 0 && (
      <aside class="mt-10 quote-card space-y-6">
        {quotes.map(quote => (
          <div>
            <blockquote class="quote-text">
              "{quote}"
            </blockquote>
            <footer class="quote-footer">
              — Joseph Karim, Founder, Become the Answer (2025)
            </footer>
          </div>
        ))}
      </aside>
    )}

    <div class="mt-12 text-center">
      <a href="/wizard" class="btn-cta" data-cta>
        Get your Claim Dossier
      </a>
    </div>
  </div>

  <script define:vars={{ slug }}>
    const ref = document.referrer || '';

    fetch('/api/events', {
      method: 'POST',
      headers: { 'content-type': 'application/json' },
      body: JSON.stringify({
        claim_slug: slug,
        page: location.pathname,
        referrer: ref,
        event_type: 'session'
      })
    }).catch(() => {});

    fetch('/api/events', {
      method: 'POST',
      headers: { 'content-type': 'application/json' },
      body: JSON.stringify({
        claim_slug: slug,
        page: location.pathname,
        event_type: 'cta_view'
      })
    }).catch(() => {});

    document.querySelectorAll('[data-cta]').forEach(btn => {
      btn.addEventListener('click', () => {
        fetch('/api/events', {
          method: 'POST',
          headers: { 'content-type': 'application/json' },
          body: JSON.stringify({
            claim_slug: slug,
            page: location.pathname,
            event_type: 'cta_click'
          })
        }).catch(() => {});
      });
    });
  </script>
</Layout>
