---
import Layout from "../../components/Layout.astro";
import JSONLD from "../../components/JSONLD.astro";
import ProofTable from "../../components/ProofTable.astro";
import { supabase } from "../../utils/database";

export const prerender = false;

const { slug } = Astro.params;

if (!supabase || !slug) {
  return Astro.redirect("/");
}

const { data, error } = await supabase
  .from("claims")
  .select("*")
  .eq("slug", slug)
  .eq("published", true)
  .maybeSingle();

if (error || !data) {
  return Astro.redirect("/");
}

const graph = data.jsonld ?? [];
const proofTableData = data.proof_table as { rows?: Array<Record<string, string | number>> } | null;
const rows = proofTableData?.rows ?? [];
const quotes: string[] = data.pull_quotes ?? [];
---

<Layout title={`${data.h1} — Become the Answer`}>
  <JSONLD graph={graph} />

  <div class="mx-auto max-w-3xl px-6 py-12">
    <p class="text-xs uppercase tracking-wide text-gray-500">Claim</p>
    <h1 class="text-4xl font-extrabold mt-2">{data.h1}</h1>
    <p class="mt-3 text-lg text-gray-700">{data.tl_dr}</p>

    <section class="mt-8">
      <h2 class="text-xl font-bold">Proof snapshot</h2>
      <ProofTable rows={rows} />
      {data.csv_url && (
        <a
          class="inline-block mt-2 text-blue-600 hover:text-blue-800 underline text-sm"
          href={data.csv_url}
          download
        >
          Download CSV
        </a>
      )}
    </section>

    <section class="mt-8">
      <h2 class="text-xl font-bold">How to use it</h2>
      <ol class="list-decimal ml-6 mt-3 space-y-2 text-gray-700">
        <li>State the claim in ≤18 tokens up top.</li>
        <li>Attach the data (table + CSV).</li>
        <li>Add JSON-LD and keep it fresh monthly.</li>
      </ol>
    </section>

    {quotes.length > 0 && (
      <aside class="mt-8 p-6 bg-gray-50 rounded-lg space-y-4">
        {quotes.map(quote => (
          <blockquote class="border-l-4 border-gray-400 pl-4 italic text-gray-700">
            "{quote}"
            <footer class="text-sm text-gray-600 mt-1 not-italic">
              — Joseph Karim, Founder, Become the Answer (2025)
            </footer>
          </blockquote>
        ))}
      </aside>
    )}

    <div class="mt-10">
      <a
        href="/wizard"
        class="inline-block bg-black text-white rounded-lg px-5 py-3 font-medium hover:bg-gray-800 transition-colors"
        data-cta
      >
        Get your Claim Dossier
      </a>
    </div>
  </div>

  <script define:vars={{ slug }}>
    const ref = document.referrer || '';

    fetch('/api/events', {
      method: 'POST',
      headers: { 'content-type': 'application/json' },
      body: JSON.stringify({
        claim_slug: slug,
        page: location.pathname,
        referrer: ref,
        event_type: 'session'
      })
    }).catch(() => {});

    fetch('/api/events', {
      method: 'POST',
      headers: { 'content-type': 'application/json' },
      body: JSON.stringify({
        claim_slug: slug,
        page: location.pathname,
        event_type: 'cta_view'
      })
    }).catch(() => {});

    document.querySelectorAll('[data-cta]').forEach(btn => {
      btn.addEventListener('click', () => {
        fetch('/api/events', {
          method: 'POST',
          headers: { 'content-type': 'application/json' },
          body: JSON.stringify({
            claim_slug: slug,
            page: location.pathname,
            event_type: 'cta_click'
          })
        }).catch(() => {});
      });
    });
  </script>
</Layout>
