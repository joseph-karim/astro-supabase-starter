---
import Layout from '../../components/Layout.astro';

export const prerender = false;

const pageTitle = "Find Companies Ready to Buy | Free Buyer Timing Tool";
const pageDescription = "Get 25 qualified leads with active buying signals. We analyze your business and find companies ready for your services right now.";
---

<Layout title={pageTitle}>
  <div class="tool-page">
    <div id="buyer-trigger-agent-root"></div>
  </div>
</Layout>

<style>
  .tool-page {
    min-height: 100vh;
    background: linear-gradient(135deg, #f8fafc 0%, #f1f5f9 100%);
  }
</style>

<script>
  import { createRoot } from 'react-dom/client';
  import { createElement } from 'react';
  import BuyerTriggerAgent from '../../components/BuyerTriggerAgent';

  const rootElement = document.getElementById('buyer-trigger-agent-root');
  if (rootElement) {
    const root = createRoot(rootElement);
    root.render(createElement(BuyerTriggerAgent));
  }
</script>
