---
// Login page with light theme matching homepage
import '../styles/globals.css'
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <meta name="robots" content="noindex, nofollow" />
  <title>Sign In | Become the Answer</title>
  <link rel="icon" type="image/x-icon" href="/favicon.ico" />
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&family=Instrument+Serif:ital@0;1&display=swap" rel="stylesheet">
</head>
<body class="login-body">
  <div class="login-container">
    <!-- Logo -->
    <a href="/" class="logo">
      <div class="logo-icon">
        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round">
          <path d="M13 10V3L4 14h7v7l9-11h-7z"/>
        </svg>
      </div>
      <span class="logo-text">Become the Answer</span>
    </a>

    <!-- Login Card -->
    <div class="login-card">
      <h1>Welcome back</h1>
      <p class="subtitle">Sign in to access your AEO dashboard</p>

      <!-- Tabs -->
      <div class="tabs">
        <button class="tab active" data-tab="signin">Sign In</button>
        <button class="tab" data-tab="signup">Sign Up</button>
      </div>

      <!-- Messages -->
      <div id="error-message" class="message error"></div>
      <div id="success-message" class="message success"></div>

      <!-- Form -->
      <form id="auth-form">
        <div class="form-group">
          <label for="email">Email</label>
          <input type="email" id="email" name="email" placeholder="you@company.com" required />
        </div>
        <div class="form-group">
          <label for="password">Password</label>
          <input type="password" id="password" name="password" placeholder="••••••••" required minlength="6" />
        </div>
        <button type="submit" class="btn-primary" id="submit-btn">Sign In</button>
      </form>

      <!-- Divider -->
      <div class="divider"><span>or continue with</span></div>

      <!-- OAuth -->
      <button class="btn-oauth" id="google-btn">
        <svg width="18" height="18" viewBox="0 0 24 24">
          <path fill="#4285F4" d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z"/>
          <path fill="#34A853" d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z"/>
          <path fill="#FBBC05" d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z"/>
          <path fill="#EA4335" d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z"/>
        </svg>
        Google
      </button>

      <!-- Demo Access -->
      <div class="demo-access">
        <p>Want to explore first?</p>
        <a href="/dashboard" class="demo-link">View Demo Dashboard →</a>
      </div>
    </div>

    <!-- Footer -->
    <p class="footer-text">
      <a href="/">← Back to website</a>
    </p>
  </div>

  <style>
    .login-body {
      font-family: 'Inter', -apple-system, BlinkMacSystemFont, sans-serif;
      background: linear-gradient(180deg, #FFFBF5 0%, #FEF7ED 50%, #FCFCFC 100%);
      min-height: 100vh;
      display: flex;
      align-items: center;
      justify-content: center;
      padding: 40px 20px;
      margin: 0;
    }

    .login-container {
      width: 100%;
      max-width: 420px;
    }

    .logo {
      display: flex;
      align-items: center;
      justify-content: center;
      gap: 12px;
      margin-bottom: 32px;
      text-decoration: none;
    }

    .logo-icon {
      width: 48px;
      height: 48px;
      border-radius: 14px;
      background: linear-gradient(135deg, #E67E22, #D35400);
      display: flex;
      align-items: center;
      justify-content: center;
      color: white;
      box-shadow: 0 8px 24px rgba(230, 126, 34, 0.25);
    }

    .logo-text {
      font-family: 'Instrument Serif', Georgia, serif;
      font-size: 1.5rem;
      color: #0F172A;
    }

    .login-card {
      background: white;
      border: 1px solid #E2E8F0;
      border-radius: 20px;
      padding: 40px;
      box-shadow: 0 4px 24px rgba(0, 0, 0, 0.06);
    }

    .login-card h1 {
      font-family: 'Instrument Serif', Georgia, serif;
      font-size: 1.75rem;
      font-weight: 400;
      color: #0F172A;
      text-align: center;
      margin: 0 0 8px 0;
    }

    .subtitle {
      font-size: 0.9375rem;
      color: #64748B;
      text-align: center;
      margin: 0 0 28px 0;
    }

    .tabs {
      display: flex;
      gap: 8px;
      margin-bottom: 24px;
    }

    .tab {
      flex: 1;
      padding: 12px;
      font-size: 0.875rem;
      font-weight: 600;
      background: #F8FAFC;
      color: #64748B;
      border: 1px solid #E2E8F0;
      border-radius: 10px;
      cursor: pointer;
      transition: all 0.2s ease;
    }

    .tab:hover {
      color: #0F172A;
      border-color: #CBD5E1;
    }

    .tab.active {
      background: #FEF3E2;
      color: #D35400;
      border-color: #E67E22;
    }

    .message {
      padding: 12px 16px;
      border-radius: 10px;
      font-size: 0.875rem;
      margin-bottom: 16px;
      display: none;
    }

    .message.error {
      background: #FEF2F2;
      border: 1px solid #FECACA;
      color: #DC2626;
    }

    .message.success {
      background: #ECFDF5;
      border: 1px solid #A7F3D0;
      color: #059669;
    }

    .form-group {
      margin-bottom: 20px;
    }

    .form-group label {
      display: block;
      font-size: 0.8125rem;
      font-weight: 600;
      color: #475569;
      margin-bottom: 8px;
    }

    .form-group input {
      width: 100%;
      padding: 14px 16px;
      font-size: 0.9375rem;
      font-family: inherit;
      background: #F8FAFC;
      border: 1px solid #E2E8F0;
      border-radius: 10px;
      color: #0F172A;
      outline: none;
      transition: all 0.2s ease;
      box-sizing: border-box;
    }

    .form-group input:focus {
      border-color: #E67E22;
      background: white;
      box-shadow: 0 0 0 3px rgba(230, 126, 34, 0.1);
    }

    .form-group input::placeholder {
      color: #94A3B8;
    }

    .btn-primary {
      width: 100%;
      padding: 14px 24px;
      font-size: 0.9375rem;
      font-weight: 600;
      font-family: inherit;
      background: linear-gradient(135deg, #E67E22, #D35400);
      color: white;
      border: none;
      border-radius: 10px;
      cursor: pointer;
      transition: all 0.2s ease;
    }

    .btn-primary:hover {
      transform: translateY(-1px);
      box-shadow: 0 6px 20px rgba(230, 126, 34, 0.3);
    }

    .btn-primary:disabled {
      opacity: 0.6;
      cursor: not-allowed;
      transform: none;
    }

    .divider {
      display: flex;
      align-items: center;
      margin: 24px 0;
      color: #94A3B8;
      font-size: 0.75rem;
      text-transform: uppercase;
      letter-spacing: 0.05em;
    }

    .divider::before,
    .divider::after {
      content: '';
      flex: 1;
      height: 1px;
      background: #E2E8F0;
    }

    .divider span {
      padding: 0 16px;
    }

    .btn-oauth {
      width: 100%;
      padding: 12px 24px;
      font-size: 0.875rem;
      font-weight: 500;
      font-family: inherit;
      background: white;
      color: #0F172A;
      border: 1px solid #E2E8F0;
      border-radius: 10px;
      cursor: pointer;
      display: flex;
      align-items: center;
      justify-content: center;
      gap: 10px;
      transition: all 0.2s ease;
    }

    .btn-oauth:hover {
      background: #F8FAFC;
      border-color: #CBD5E1;
    }

    .demo-access {
      margin-top: 24px;
      padding-top: 24px;
      border-top: 1px solid #E2E8F0;
      text-align: center;
    }

    .demo-access p {
      font-size: 0.8125rem;
      color: #64748B;
      margin: 0 0 8px 0;
    }

    .demo-link {
      font-size: 0.875rem;
      font-weight: 600;
      color: #E67E22;
      text-decoration: none;
    }

    .demo-link:hover {
      color: #D35400;
    }

    .footer-text {
      text-align: center;
      margin-top: 24px;
      font-size: 0.875rem;
    }

    .footer-text a {
      color: #E67E22;
      text-decoration: none;
      font-weight: 500;
    }

    .footer-text a:hover {
      color: #D35400;
    }
  </style>

  <script>
    import { createClient } from '@supabase/supabase-js'

    const supabaseUrl = import.meta.env.PUBLIC_SUPABASE_URL
    const supabaseKey = import.meta.env.PUBLIC_SUPABASE_ANON_KEY
    
    const supabase = supabaseUrl && supabaseKey 
      ? createClient(supabaseUrl, supabaseKey)
      : null

    const form = document.getElementById('auth-form') as HTMLFormElement
    const submitBtn = document.getElementById('submit-btn') as HTMLButtonElement
    const googleBtn = document.getElementById('google-btn') as HTMLButtonElement
    const errorDiv = document.getElementById('error-message') as HTMLDivElement
    const successDiv = document.getElementById('success-message') as HTMLDivElement
    const tabs = document.querySelectorAll('.tab')
    
    let mode: 'signin' | 'signup' = 'signin'

    tabs.forEach(tab => {
      tab.addEventListener('click', () => {
        tabs.forEach(t => t.classList.remove('active'))
        tab.classList.add('active')
        mode = tab.getAttribute('data-tab') as 'signin' | 'signup'
        submitBtn.textContent = mode === 'signin' ? 'Sign In' : 'Create Account'
        hideMessages()
      })
    })

    function showError(message: string) {
      errorDiv.textContent = message
      errorDiv.style.display = 'block'
      successDiv.style.display = 'none'
    }

    function showSuccess(message: string) {
      successDiv.textContent = message
      successDiv.style.display = 'block'
      errorDiv.style.display = 'none'
    }

    function hideMessages() {
      errorDiv.style.display = 'none'
      successDiv.style.display = 'none'
    }

    form.addEventListener('submit', async (e) => {
      e.preventDefault()
      hideMessages()

      if (!supabase) {
        showError('Authentication not configured. Use the demo link below to explore.')
        return
      }

      const email = (document.getElementById('email') as HTMLInputElement).value
      const password = (document.getElementById('password') as HTMLInputElement).value

      submitBtn.disabled = true
      submitBtn.textContent = mode === 'signin' ? 'Signing in...' : 'Creating account...'

      try {
        if (mode === 'signup') {
          const { data, error } = await supabase.auth.signUp({
            email,
            password,
            options: { emailRedirectTo: `${window.location.origin}/dashboard` }
          })
          if (error) throw error
          if (data.user && !data.session) {
            showSuccess('Check your email for a confirmation link!')
          } else {
            window.location.href = '/dashboard'
          }
        } else {
          const { data, error } = await supabase.auth.signInWithPassword({ email, password })
          if (error) throw error
          if (data.session) {
            document.cookie = `sb-access-token=${data.session.access_token}; path=/; max-age=${60 * 60 * 24 * 7}; SameSite=Lax`
            document.cookie = `sb-refresh-token=${data.session.refresh_token}; path=/; max-age=${60 * 60 * 24 * 7}; SameSite=Lax`
          }
          window.location.href = '/dashboard'
        }
      } catch (error: any) {
        showError(error.message || 'An error occurred')
      } finally {
        submitBtn.disabled = false
        submitBtn.textContent = mode === 'signin' ? 'Sign In' : 'Create Account'
      }
    })

    googleBtn.addEventListener('click', async () => {
      if (!supabase) {
        showError('Authentication not configured. Use the demo link below to explore.')
        return
      }
      const { error } = await supabase.auth.signInWithOAuth({
        provider: 'google',
        options: { redirectTo: `${window.location.origin}/api/auth/callback` }
      })
      if (error) showError(error.message)
    })

    if (supabase) {
      supabase.auth.getSession().then(({ data: { session } }) => {
        if (session) window.location.href = '/dashboard'
      })
    }
  </script>
</body>
</html>
