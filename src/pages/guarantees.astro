---
import Layout from "../components/Layout.astro";

export const prerender = false;
---

<Layout title="Our Guarantees — Become the Answer">
  <style>
    .kicker {
      font-family: 'Inter', sans-serif;
      font-size: 12px;
      font-weight: 700;
      letter-spacing: 0.14em;
      text-transform: uppercase;
      color: #9EA3C7;
      text-align: center;
      margin-bottom: 12px;
    }

    .h1 {
      font-family: 'Space Grotesk', sans-serif;
      font-size: 48px;
      font-weight: 800;
      line-height: 1.1;
      letter-spacing: -0.02em;
      color: #F3F1FF;
      text-align: center;
      margin-bottom: 16px;
    }

    .subhead {
      font-family: 'Inter', sans-serif;
      font-size: 20px;
      font-weight: 500;
      line-height: 1.4;
      letter-spacing: -0.01em;
      color: #D7D2FF;
      text-align: center;
      margin-bottom: 40px;
    }

    .guarantee-card {
      background: #111319;
      border: 1px solid #1B1F29;
      border-radius: 16px;
      padding: 32px;
      box-shadow: 0 1px 0 #1B1F29 inset, 0 10px 30px rgba(0,0,0,.35);
      transition: all 0.3s cubic-bezier(.2,.6,.2,1);
    }

    .guarantee-card:hover {
      border-color: #39206B;
      box-shadow: 0 1px 0 #39206B inset, 0 20px 40px rgba(0,0,0,.5), 0 0 0 1px rgba(90,58,245,0.3);
      transform: translateY(-4px);
    }

    .guarantee-title {
      font-family: 'Space Grotesk', sans-serif;
      font-size: 24px;
      font-weight: 700;
      letter-spacing: -0.01em;
      color: #F3F1FF;
      margin-bottom: 12px;
    }

    .guarantee-text {
      font-family: 'Inter', sans-serif;
      font-size: 16px;
      line-height: 1.6;
      letter-spacing: -0.01em;
      color: #D7D2FF;
    }

    .btn-cta {
      display: inline-block;
      background: linear-gradient(135deg, #5A3AF5 0%, #7A5CFF 55%, #31D0C6 100%);
      color: #0B0C10;
      padding: 16px 32px;
      border-radius: 12px;
      font-family: 'Inter', sans-serif;
      font-size: 16px;
      font-weight: 700;
      letter-spacing: -0.01em;
      text-decoration: none;
      transition: all 0.2s cubic-bezier(.2,.6,.2,1);
      box-shadow: 0 0 0 0 rgba(122,92,255,0.4);
    }

    .btn-cta:hover {
      filter: brightness(1.1);
      box-shadow: 0 0 0 8px rgba(122,92,255,0.15);
      transform: translateY(-2px);
      text-decoration: none;
    }

    .btn-cta:active {
      transform: translateY(0);
    }

    @media (max-width: 768px) {
      .h1 {
        font-size: 36px;
      }
      .subhead {
        font-size: 18px;
      }
      .guarantee-card {
        padding: 24px 20px;
      }
    }
  </style>

  <div class="mx-auto max-w-3xl px-6 py-12">
    <div class="mb-12">
      <p class="kicker">OUR PROMISE</p>
      <h1 class="h1">Risk reversals that keep us honest</h1>
      <p class="subhead">We stand behind our work with clear guarantees</p>
    </div>

    <section class="mt-10 space-y-6">
      <div class="guarantee-card">
        <h2 class="guarantee-title">1) Fit-or-Free (Wizard)</h2>
        <p class="guarantee-text">
          If we can't produce 3 claim options scoring ≥85 with 5+ credible sources for the top pick,
          we refund the Wizard fee. You keep the Dossier.
        </p>
      </div>

      <div class="guarantee-card">
        <h2 class="guarantee-title">2) Appearance Guarantee (Sprint)</h2>
        <p class="guarantee-text">
          Within 4 weeks you'll get at least one "appeared or cited" result on a seeded query with
          screenshots—or we work an extra week free and add one more proof asset.
        </p>
      </div>

      <div class="guarantee-card">
        <h2 class="guarantee-title">3) Meeting-Backed Credit (Compound)</h2>
        <p class="guarantee-text">
          If AAQM (AI-Attributed Qualified Meetings) = 0 after 60 days (with timely approvals),
          we credit your next month.
        </p>
      </div>
    </section>

    <div class="mt-12 text-center">
      <a href="/wizard" class="btn-cta">
        Get your Claim Dossier
      </a>
    </div>
  </div>
</Layout>
