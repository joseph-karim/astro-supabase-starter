---
import Layout from "../../components/Layout.astro";
import { supabase } from "../../utils/database";

export const prerender = false;

if (Astro.request.method === "POST") {
  const formData = await Astro.request.formData();

  const email = String(formData.get("email") || "");
  const company = String(formData.get("company") || "");
  const industry = String(formData.get("industry") || "");
  const acv = String(formData.get("acv") || "");
  const buyers = String(formData.get("buyers") || "");

  const icp = {
    industry,
    acv,
    buyers: buyers.split(",").map(s => s.trim()).filter(Boolean)
  };

  const pains = String(formData.get("pains") || "")
    .split("\n")
    .map(s => s.trim())
    .filter(Boolean);

  const proof_links = String(formData.get("proof") || "")
    .split("\n")
    .map(s => s.trim())
    .filter(Boolean);

  const competitors = String(formData.get("competitors") || "")
    .split("\n")
    .map(s => s.trim())
    .filter(Boolean);

  if (supabase) {
    await supabase.from("leads").insert({
      email,
      company,
      icp,
      pains,
      proof_links,
      competitors
    });
  }

  return Astro.redirect("/wizard/submit");
}
---

<Layout title="Ownable Idea Wizard — Become the Answer">
  <div class="mx-auto max-w-3xl px-6 py-12">
    <div class="text-center mb-10">
      <h1 class="text-4xl font-bold text-slate-900 tracking-tight">Ownable Idea Wizard</h1>
      <p class="mt-3 text-lg text-slate-600">Pick one claim you can own, prove, and monetize.</p>
    </div>

    <form method="post" class="mt-8 space-y-6 bg-white p-8 rounded-2xl shadow-lg border border-slate-200">
      <div>
        <label for="email" class="block text-sm font-semibold text-slate-900 mb-2">Work email *</label>
        <input
          type="email"
          id="email"
          name="email"
          required
          placeholder="you@company.com"
          class="w-full border-2 border-slate-200 p-3.5 rounded-xl focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-all duration-200 bg-slate-50 focus:bg-white hover:border-slate-300 text-slate-900 placeholder:text-slate-400"
        />
      </div>

      <div>
        <label for="company" class="block text-sm font-semibold text-slate-900 mb-2">Company</label>
        <input
          type="text"
          id="company"
          name="company"
          placeholder="Acme Inc."
          class="w-full border-2 border-slate-200 p-3.5 rounded-xl focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-all duration-200 bg-slate-50 focus:bg-white hover:border-slate-300 text-slate-900 placeholder:text-slate-400"
        />
      </div>

      <div>
        <label for="industry" class="block text-sm font-semibold text-slate-900 mb-2">Industry</label>
        <input
          type="text"
          id="industry"
          name="industry"
          placeholder="B2B SaaS"
          class="w-full border-2 border-slate-200 p-3.5 rounded-xl focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-all duration-200 bg-slate-50 focus:bg-white hover:border-slate-300 text-slate-900 placeholder:text-slate-400"
        />
      </div>

      <div>
        <label for="acv" class="block text-sm font-semibold text-slate-900 mb-2">Typical ACV</label>
        <input
          type="text"
          id="acv"
          name="acv"
          placeholder="$50k - $200k"
          class="w-full border-2 border-slate-200 p-3.5 rounded-xl focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-all duration-200 bg-slate-50 focus:bg-white hover:border-slate-300 text-slate-900 placeholder:text-slate-400"
        />
      </div>

      <div>
        <label for="buyers" class="block text-sm font-semibold text-slate-900 mb-2">Buyer titles (comma-separated)</label>
        <input
          type="text"
          id="buyers"
          name="buyers"
          placeholder="VP Sales, CRO, Director of Marketing"
          class="w-full border-2 border-slate-200 p-3.5 rounded-xl focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-all duration-200 bg-slate-50 focus:bg-white hover:border-slate-300 text-slate-900 placeholder:text-slate-400"
        />
      </div>

      <div>
        <label for="pains" class="block text-sm font-semibold text-slate-900 mb-2">Top 3 pains (one per line)</label>
        <textarea
          id="pains"
          name="pains"
          rows="4"
          placeholder="Can't track pipeline velocity&#10;Lead quality is declining&#10;Sales cycle too long"
          class="w-full border-2 border-slate-200 p-3.5 rounded-xl focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-all duration-200 bg-slate-50 focus:bg-white hover:border-slate-300 text-slate-900 placeholder:text-slate-400"
        ></textarea>
      </div>

      <div>
        <label for="proof" class="block text-sm font-semibold text-slate-900 mb-2">Links to talks, data, decks (one per line)</label>
        <textarea
          id="proof"
          name="proof"
          rows="4"
          placeholder="https://example.com/deck.pdf&#10;https://example.com/case-study"
          class="w-full border-2 border-slate-200 p-3.5 rounded-xl focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-all duration-200 bg-slate-50 focus:bg-white hover:border-slate-300 text-slate-900 placeholder:text-slate-400"
        ></textarea>
      </div>

      <div>
        <label for="competitors" class="block text-sm font-semibold text-slate-900 mb-2">Competitor URLs (one per line)</label>
        <textarea
          id="competitors"
          name="competitors"
          rows="3"
          placeholder="https://competitor1.com&#10;https://competitor2.com"
          class="w-full border-2 border-slate-200 p-3.5 rounded-xl focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-all duration-200 bg-slate-50 focus:bg-white hover:border-slate-300 text-slate-900 placeholder:text-slate-400"
        ></textarea>
      </div>

      <button
        type="submit"
        class="w-full bg-gradient-to-r from-blue-600 to-blue-700 text-white rounded-xl px-6 py-4 font-semibold text-base hover:from-blue-700 hover:to-blue-800 transition-all duration-200 shadow-lg hover:shadow-xl hover:-translate-y-0.5 active:translate-y-0"
      >
        Get my Claim Dossier
      </button>
    </form>

    <p class="text-sm text-slate-600 mt-6 text-center">
      You'll get 5–7 claim options, a proof table + CSV, and a launch spec.
    </p>
  </div>
</Layout>
