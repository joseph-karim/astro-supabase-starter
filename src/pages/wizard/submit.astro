---
import Layout from "../../components/Layout.astro";

export const prerender = false;
---

<Layout title="Thank You — Become the Answer">
  <style>
    .success-container {
      max-width: 48rem;
      margin: 0 auto;
      padding: 3rem 1.5rem;
      text-align: center;
    }

    .success-card {
      background: #111319;
      border: 1px solid #1B1F29;
      border-radius: 16px;
      padding: 48px 40px;
      box-shadow: 0 1px 0 #1B1F29 inset, 0 10px 30px rgba(0,0,0,.35);
    }

    .success-icon {
      width: 64px;
      height: 64px;
      margin: 0 auto 24px;
      background: linear-gradient(135deg, #5A3AF5 0%, #7A5CFF 100%);
      border-radius: 50%;
      display: flex;
      align-items: center;
      justify-content: center;
      animation: pulse 2s ease-in-out infinite;
    }

    @keyframes pulse {
      0%, 100% {
        box-shadow: 0 0 0 0 rgba(122,92,255,0.4);
      }
      50% {
        box-shadow: 0 0 0 12px rgba(122,92,255,0);
      }
    }

    .success-title {
      font-family: 'Space Grotesk', sans-serif;
      font-size: 36px;
      font-weight: 800;
      line-height: 1.2;
      letter-spacing: -0.02em;
      color: #F3F1FF;
      margin-bottom: 16px;
    }

    .success-text {
      font-family: 'Inter', sans-serif;
      font-size: 18px;
      font-weight: 500;
      line-height: 1.6;
      letter-spacing: -0.01em;
      color: #D7D2FF;
      margin-bottom: 32px;
    }

    .btn-back {
      display: inline-flex;
      align-items: center;
      gap: 8px;
      padding: 12px 24px;
      background: rgba(90,58,245,0.1);
      border: 1px solid #39206B;
      border-radius: 10px;
      color: #7A5CFF;
      font-family: 'Inter', sans-serif;
      font-size: 15px;
      font-weight: 600;
      text-decoration: none;
      transition: all 0.2s cubic-bezier(.2,.6,.2,1);
    }

    .btn-back:hover {
      background: rgba(90,58,245,0.15);
      border-color: #5A3AF5;
      color: #9B7FFF;
      transform: translateX(-4px);
      text-decoration: none;
    }

    @media (max-width: 768px) {
      .success-card {
        padding: 32px 24px;
      }
      .success-title {
        font-size: 28px;
      }
      .success-text {
        font-size: 16px;
      }
    }
  </style>

  <div class="success-container">
    <div class="success-card">
      <div class="success-icon">
        <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="#F3F1FF" stroke-width="3" stroke-linecap="round" stroke-linejoin="round">
          <polyline points="20 6 9 17 4 12"></polyline>
        </svg>
      </div>
      <h1 class="success-title">Thanks — next step</h1>
      <p class="success-text">
        We'll book a 45-min session to run the Wizard live and deliver your Claim Dossier within 3 days.
      </p>
      <a href="/" class="btn-back">
        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <line x1="19" y1="12" x2="5" y2="12"></line>
          <polyline points="12 19 5 12 12 5"></polyline>
        </svg>
        Back to home
      </a>
    </div>
  </div>
</Layout>
