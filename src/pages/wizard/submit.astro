---
import Layout from "../../components/Layout.astro";

export const prerender = false;
---

<Layout title="Thank You — Become the Answer">
  <div class="mx-auto max-w-3xl px-6 py-12">
    <h1 class="text-3xl font-bold">Thanks — next step</h1>
    <p class="mt-4 text-lg text-gray-700">
      We'll book a 45-min session to run the Wizard live and deliver your Claim Dossier within 3 days.
    </p>
    <a
      href="/"
      class="inline-block mt-6 text-blue-600 hover:text-blue-800 underline"
    >
      Back to home
    </a>
  </div>
</Layout>
