            <rect width="200" height="140" rx="12" fill="white" stroke="#E2E8F0" stroke-width="1.5"/>
            <circle cx="100" cy="50" r="24" fill="#FEF3E2" stroke="#E67E22" stroke-width="1.5"/>
            <text x="100" y="54" font-family="Inter" font-size="16" fill="#E67E22" text-anchor="middle">AI</text>
            <text x="100" y="96" font-family="Inter" font-size="11" font-weight="500" fill="#0F172A" text-anchor="middle">AI reads your content</text>
            <text x="100" y="112" font-family="Inter" font-size="10" fill="#64748B" text-anchor="middle">and recommends you</text>
