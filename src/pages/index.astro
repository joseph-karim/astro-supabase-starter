<script>
  // Analytics
  fetch('/api/events', {
    method: 'POST',
    headers: { 'content-type': 'application/json' },
    body: JSON.stringify({ claim_slug: 'home', page: '/', referrer: document.referrer || '', event_type: 'session' })
  }).catch(() => {});

  document.querySelectorAll('[data-cta]').forEach(el => {
    el.addEventListener('click', () => {
      fetch('/api/events', {
        method: 'POST',
        headers: { 'content-type': 'application/json' },
        body: JSON.stringify({ claim_slug: 'home', page: '/', event_type: 'cta_click' })
      }).catch(() => {});
    });
  });

  // Contact form submission
  const contactForm = document.getElementById('contact-form');
  const formSuccess = document.getElementById('form-success');
  const submitBtn = document.getElementById('submit-btn');

  contactForm?.addEventListener('submit', async (e) => {
    e.preventDefault();

    const btnText = submitBtn?.querySelector('.btn-text');
    const btnLoading = submitBtn?.querySelector('.btn-loading');

    if (btnText && btnText instanceof HTMLElement) btnText.style.display = 'none';
    if (btnLoading && btnLoading instanceof HTMLElement) btnLoading.style.display = 'inline';
    if (submitBtn && 'disabled' in submitBtn) submitBtn.disabled = true;

    const formData = new FormData(contactForm);
    const data = {
      name: formData.get('name'),
      email: formData.get('email'),
      company: formData.get('company'),
      message: formData.get('message'),
      source: 'buyer_timing_audit',
      submitted_at: new Date().toISOString()
    };

    try {
      const response = await fetch('/api/leads', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify(data)
      });

      if (response.ok) {
        if (contactForm instanceof HTMLElement) contactForm.style.display = 'none';
        if (formSuccess instanceof HTMLElement) formSuccess.style.display = 'block';

        // Track conversion
        fetch('/api/events', {
          method: 'POST',
          headers: { 'content-type': 'application/json' },
          body: JSON.stringify({ claim_slug: 'home', page: '/', event_type: 'lead_submitted' })
        }).catch(() => {});
      } else {
        throw new Error('Submission failed');
      }
    } catch (error) {
      alert('Something went wrong. Please try again or email us directly.');
      if (btnText && btnText instanceof HTMLElement) btnText.style.display = 'inline';
      if (btnLoading && btnLoading instanceof HTMLElement) btnLoading.style.display = 'none';
      if (submitBtn && 'disabled' in submitBtn) submitBtn.disabled = false;
    }
  });
</script>
