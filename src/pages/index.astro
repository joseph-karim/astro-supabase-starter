<style>
  :root {
    --obsidian: #0D0D0F;
    --ivory: #FAF9F7;
    --signal-blue: #2563EB;
    --graphite: #374151;
    --smoke: #9CA3AF;
    --mist: #F3F4F6;
    --high-signal: #059669;
    --medium-signal: #D97706;
  }

  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  /* Navigation */
  .nav {
    position: sticky;
    top: 0;
    z-index: 100;
    background: var(--ivory);
    border-bottom: 1px solid #E5E7EB;
  }

  .nav-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 48px;
    display: flex;
    align-items: center;
    justify-content: space-between;
    height: 72px;
  }

  .nav-logo {
    font-size: 13px;
    font-weight: 500;
    letter-spacing: 0.1em;
    color: var(--obsidian);
  }

  .nav-links {
    display: flex;
    align-items: center;
    gap: 32px;
  }

  .nav-links a {
    font-size: 14px;
    font-weight: 500;
    color: var(--graphite);
    text-decoration: none;
    transition: color 0.2s;
  }

  .nav-links a:hover {
    color: var(--obsidian);
  }

  .nav-cta {
    padding: 10px 20px;
    background: var(--obsidian);
    color: var(--ivory) !important;
    border-radius: 6px;
  }

  .nav-cta:hover {
    background: var(--graphite);
  }

  /* Hero */
  .hero {
    background: var(--ivory);
    padding: 80px 48px 120px;
  }

  .hero-container {
    max-width: 1200px;
    margin: 0 auto;
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 80px;
    align-items: center;
  }

  .hero-title {
    font-size: 48px;
    font-weight: 600;
    line-height: 1.1;
    letter-spacing: -0.01em;
    color: var(--obsidian);
    margin-bottom: 20px;
  }

  .hero-subtitle {
    font-size: 18px;
    font-weight: 500;
    color: var(--graphite);
    margin-bottom: 16px;
  }

  .hero-desc {
    font-size: 17px;
    line-height: 1.6;
    color: var(--graphite);
    margin-bottom: 32px;
    max-width: 540px;
  }

  .hero-ctas {
    display: flex;
    gap: 16px;
    align-items: center;
    flex-wrap: wrap;
  }

  .btn {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 14px 28px;
    font-size: 15px;
    font-weight: 500;
    text-decoration: none;
    border-radius: 8px;
    transition: all 0.2s;
    cursor: pointer;
    border: none;
    font-family: inherit;
  }

  .btn-primary {
    background: var(--obsidian);
    color: var(--ivory);
  }

  .btn-primary:hover {
    background: var(--graphite);
  }

  .btn-secondary {
    background: transparent;
    color: var(--obsidian);
    border: 2px solid var(--obsidian);
  }

  .btn-secondary:hover {
    background: var(--obsidian);
    color: var(--ivory);
  }

  .btn-large {
    padding: 16px 32px;
    font-size: 16px;
  }

  .btn-cta {
    width: 100%;
    max-width: 400px;
    margin: 32px auto 16px;
  }

  .hero-visual {
    display: flex;
    flex-direction: column;
    gap: 16px;
  }

  .signal-card {
    background: white;
    border: 1px solid #E5E7EB;
    border-radius: 12px;
    padding: 24px;
  }

  .signal-card-header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: 20px;
  }

  .signal-company {
    font-size: 17px;
    font-weight: 600;
    color: var(--obsidian);
    margin-bottom: 4px;
  }

  .signal-meta {
    font-size: 13px;
    color: var(--smoke);
  }

  .signal-score {
    width: 48px;
    height: 48px;
    background: rgba(37, 99, 235, 0.1);
    color: var(--signal-blue);
    border-radius: 8px;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 20px;
    font-weight: 700;
  }

  .signal-score-high {
    background: rgba(5, 150, 105, 0.1);
    color: var(--high-signal);
  }

  .signal-detail {
    background: var(--mist);
    padding: 16px;
    border-radius: 8px;
    margin-bottom: 16px;
  }

  .signal-label {
    font-size: 11px;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: var(--smoke);
    margin-bottom: 6px;
  }

  .signal-text {
    font-size: 15px;
    font-weight: 500;
    color: var(--obsidian);
  }

  .signal-tags {
    display: flex;
    gap: 8px;
    flex-wrap: wrap;
  }

  .tag {
    padding: 6px 12px;
    background: var(--mist);
    color: var(--graphite);
    font-size: 13px;
    border-radius: 6px;
  }

