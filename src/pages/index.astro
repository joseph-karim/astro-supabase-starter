    font-size: 36px;
    font-weight: 600;
    line-height: 1.2;
    letter-spacing: -0.01em;
    color: var(--obsidian);
    text-align: center;
    margin-bottom: 16px;
  }

  .section-subtitle {
    font-size: 18px;
    line-height: 1.6;
    color: var(--graphite);
    text-align: center;
    margin-bottom: 64px;
  }

  /* Split Layout (Reality Check) */
