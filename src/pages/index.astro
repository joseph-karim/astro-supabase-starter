---
import JSONLD from '../shared/JSONLD.astro';
import OpenWindow from '../shared/OpenWindow.astro';
import LLMFunnelArc from '../shared/LLMFunnelArc.astro';
import Bullseye from '../shared/Bullseye.astro';
import TokenMicroscope from '../shared/TokenMicroscope.astro';
import PipelineDiagram from '../shared/PipelineDiagram.astro';
import AnswerCard from '../shared/AnswerCard.astro';
import ProofCard from '../shared/ProofCard.astro';
import GuaranteesStrip from '../shared/GuaranteesStrip.astro';

export const prerender = false;

const siteGraph = [
  {
    "@type": "Organization",
    "name": "Become The Answer",
    "url": "https://becometheanswer.ai",
    "logo": "https://becometheanswer.ai/og-logo.png",
    "sameAs": ["https://www.linkedin.com/company/becometheanswer"]
  },
  {
    "@type": "Service",
    "name": "AEO — AI Visibility & Conversion",
    "provider": {"@type":"Organization","name":"Become The Answer"},
    "description": "Claim → Cite → Close for challenger brands: claim page, evidence + schema, conversion-first design.",
    "areaServed": "Global",
    "url": "https://becometheanswer.ai"
  }
];
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <title>Become the Answer — AEO: AI Visibility & Conversion for Challenger Brands</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content="Own the claim. Win the click. Close the deal. Turn your expertise into answer-engine visibility that books meetings." />
    <link rel="canonical" href="https://becometheanswer.ai/" />
    <JSONLD graph={siteGraph} />
    <style>
      :root{
        --bg:#f8f9fa; --surface:#ffffff; --ink:#2c3e50; --muted:#546e7a; --accent:#4a6fa5;
        --highlight:#e3f2fd; --success:#4caf50; --border:#b0bec5; --shadow:rgba(44,62,80,0.08);
      }
      *{box-sizing:border-box}
      html,body{margin:0;padding:0;background:var(--bg);color:var(--ink);font:16px/1.6 system-ui,-apple-system,Segoe UI,Roboto,Inter,Helvetica,Arial}
      a{color:var(--accent);text-decoration:none}
      .wrap{max-width:1140px;margin:0 auto;padding:0 24px}
      .btn{display:inline-flex;gap:10px;align-items:center;border-radius:8px;padding:14px 24px;border:2px solid var(--accent);background:var(--accent);color:#ffffff;font-weight:700;transition:all .2s}
      .btn:hover{background:#3a5a85;border-color:#3a5a85}
      .btn--outline{background:transparent;color:var(--accent)}
      .btn--outline:hover{background:var(--highlight)}
      .ribbon{background:var(--highlight);border-bottom:1px solid var(--border);padding:12px 0;text-align:center;font-size:14px;color:var(--ink)}
      .hero{padding:60px 0 48px;background:linear-gradient(135deg, var(--surface) 0%, var(--highlight) 100%)}
      .hero-grid{display:grid;grid-template-columns:1.1fr .9fr;gap:40px;align-items:center}
      .h1{font-size:58px;line-height:1.1;margin:0 0 16px;font-weight:900;color:var(--ink)}
      .subhead{font-size:24px;color:var(--muted);margin:0 0 12px}
      .support{font-size:13px;color:var(--muted);margin:0 0 16px;text-transform:uppercase;letter-spacing:.1em}
      .chips{display:flex;gap:10px;flex-wrap:wrap;margin:0 0 32px}
      .chip{padding:8px 16px;background:var(--surface);border:1px solid var(--border);border-radius:20px;font-size:13px;color:var(--muted)}
      .bar{display:flex;gap:12px;flex-wrap:wrap}
      .section{padding:60px 0;border-bottom:1px solid var(--border)}
      .kicker{font-size:12px;color:var(--accent);margin:0 0 8px;text-transform:uppercase;letter-spacing:.15em;font-weight:700}
      .h2{font-size:36px;font-weight:800;margin:0 0 16px;color:var(--ink)}
      .lead{font-size:18px;color:var(--muted);margin:0 0 24px;line-height:1.7}
      .card{background:var(--surface);border:1px solid var(--border);border-radius:12px;padding:24px;box-shadow:0 2px 8px var(--shadow)}
      .grid{display:grid;gap:32px}
      .two{grid-template-columns:repeat(2,1fr)}
      .three{grid-template-columns:repeat(3,1fr)}
      .list{margin:0;padding:0 0 0 24px;line-height:1.8}
      .list li{margin:10px 0}
      .price-grid{display:grid;grid-template-columns:repeat(3,1fr);gap:24px;margin-top:32px}
      .price-card{padding:32px;border:2px solid var(--border);border-radius:12px;background:var(--surface)}
      .price-card.featured{border-color:var(--accent);box-shadow:0 4px 16px var(--shadow)}
      .price-card h3{margin:0 0 8px;font-size:22px;color:var(--ink)}
      .price-card .amt{font-size:32px;font-weight:800;margin:12px 0 24px;color:var(--accent)}
      .faq dt{font-weight:800;margin:24px 0 8px;font-size:18px;color:var(--ink)}
      .faq dd{margin:0 0 16px;color:var(--muted)}
      .footer{padding:32px 0;background:var(--surface);border-top:1px solid var(--border);color:var(--muted)}
      .footer-flex{display:flex;justify-content:space-between;align-items:center;flex-wrap:wrap;gap:16px}
      .footer nav{display:flex;gap:20px}
      .footer a{color:var(--muted)}
      .footer a:hover{color:var(--accent)}
      @media (max-width:980px){
        .hero-grid,.two,.three,.price-grid{grid-template-columns:1fr}
        .h1{font-size:42px}
      }
    </style>
  </head>
  <body>
    <div class="ribbon">
      AEO is here: AI answers now sit on top of search. Buyers are judged by what AI says—and who it cites.
    </div>

    <header class="hero">
      <div class="wrap hero-grid">
        <div>
          <h1 class="h1">Become the Answer.</h1>
          <p class="subhead">Own the claim. Win the click. Close the deal.</p>
          <p class="support">Built-For</p>
          <div class="chips">
            <span class="chip">Consulting services</span>
            <span class="chip">Agencies</span>
            <span class="chip">B2B SaaS/AI</span>
            <span class="chip">Authors/Professional Creators</span>
          </div>
          <div class="bar">
            <a href="/wizard" class="btn" data-cta>Get your Claim Dossier</a>
            <a href="/guarantees" class="btn btn--outline">See our Guarantees</a>
          </div>
        </div>
        <div>
          <OpenWindow />
        </div>
      </div>
    </header>

    <section class="section">
      <div class="wrap">
        <h2 class="h2">Why "Become the Answer" = Become the Go-To Solution</h2>
        <p class="lead">When buyers use LLMs, they're not typing one keyword and skimming ten links. They describe context, add constraints, and ask for a decision. To win, you must be the specific solution for specific people at the moment of intent to act.</p>

        <div class="card" style="margin:32px 0">
          <h3 style="margin-bottom:16px">What changes vs legacy search</h3>
          <ul class="list">
            <li><strong>Search</strong> = many short queries over days; bottom-of-funnel keywords are expensive and crowded.</li>
            <li><strong>LLMs</strong> = one ongoing conversation with rich context; the model consolidates options and pins 1–3 sources.</li>
            <li><strong>Goal</strong> = become the cited source when the buyer asks the Commercial Critical Question (CCQ): "Given my constraints, who should I pick and why?"</li>
          </ul>
        </div>

        <LLMFunnelArc />
      </div>
    </section>

    <section class="section">
      <div class="wrap">
        <p class="kicker">Commercial Intent</p>
        <h2 class="h2">Legacy SEO vs AEO</h2>
        <div style="overflow-x:auto;margin:24px 0">
          <table style="width:100%;border-collapse:collapse;font-size:14px">
            <thead>
              <tr style="background:var(--highlight)">
                <th style="padding:16px;text-align:left;border:1px solid var(--border)"></th>
                <th style="padding:16px;text-align:left;border:1px solid var(--border)">Legacy SEO</th>
                <th style="padding:16px;text-align:left;border:1px solid var(--border);background:var(--accent);color:#ffffff">AEO (Answer-Engine Optimization)</th>
              </tr>
            </thead>
            <tbody>
              <tr>
                <td style="padding:12px;border:1px solid var(--border);font-weight:700">Buyer behavior</td>
                <td style="padding:12px;border:1px solid var(--border)">Many queries → compare links</td>
                <td style="padding:12px;border:1px solid var(--border);background:var(--highlight)"><strong>One conversation → asks for a verdict</strong></td>
              </tr>
              <tr>
                <td style="padding:12px;border:1px solid var(--border);font-weight:700">Your job</td>
                <td style="padding:12px;border:1px solid var(--border)">Rank broadly</td>
                <td style="padding:12px;border:1px solid var(--border);background:var(--highlight)"><strong>Be the quoted solution for a narrow CCQ</strong></td>
              </tr>
              <tr>
                <td style="padding:12px;border:1px solid var(--border);font-weight:700">Content</td>
                <td style="padding:12px;border:1px solid var(--border)">Topic clusters, long intros</td>
                <td style="padding:12px;border:1px solid var(--border);background:var(--highlight)"><strong>One canonical Claim Page per idea</strong></td>
              </tr>
              <tr>
                <td style="padding:12px;border:1px solid var(--border);font-weight:700">Structure</td>
                <td style="padding:12px;border:1px solid var(--border)">Walls of text</td>
                <td style="padding:12px;border:1px solid var(--border);background:var(--highlight)"><strong>≤18-token claim + proof near the top</strong></td>
              </tr>
              <tr>
                <td style="padding:12px;border:1px solid var(--border);font-weight:700">Proof</td>
                <td style="padding:12px;border:1px solid var(--border)">Opinions</td>
                <td style="padding:12px;border:1px solid var(--border);background:var(--highlight)"><strong>Table + tiny CSV + JSON-LD (entity clean)</strong></td>
              </tr>
              <tr>
                <td style="padding:12px;border:1px solid var(--border);font-weight:700">Metric</td>
                <td style="padding:12px;border:1px solid var(--border)">Impressions, rank</td>
                <td style="padding:12px;border:1px solid var(--border);background:var(--highlight)"><strong>Answer-Attributed Meetings (AAQM) & pipeline</strong></td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>
    </section>

    <section class="section">
      <div class="wrap">
        <h2 class="h2">Who this is for (specific people, specific solutions)</h2>
        <p class="lead">Be the big fish in your defined pond.</p>
        <div class="grid two">
          <div>
            <ul class="list">
              <li><strong>Consulting & agencies:</strong> "If you are X with Y constraint, hire us. Here's proof."</li>
              <li><strong>Niche B2B SaaS/AI:</strong> "If you need feature/integration for industry, choose us. Here's ROI."</li>
              <li><strong>Professional influencers:</strong> "If you're ICP, follow this method—then book the workshop."</li>
            </ul>
          </div>
          <div class="card" style="display:flex;justify-content:center;align-items:center">
            <Bullseye />
          </div>
        </div>
      </div>
    </section>

    <section class="section">
      <div class="wrap">
        <h2 class="h2">Under the hood (just enough tech to win the verdict)</h2>
        <p class="lead">LLMs lift short, self-contained, information-dense lines. Think ≈60-token windows: dense enough to answer, short enough to quote.</p>

        <div style="margin-top:32px">
          <TokenMicroscope />
        </div>

        <p style="margin-top:24px;color:var(--muted);">
          <strong>Why it matters to revenue:</strong> Dense lines get attributed, your URL appears, and the buyer has a clear next step.
        </p>
      </div>
    </section>

    <section class="section">
      <div class="wrap">
        <h2 class="h2">The strategy → tactics (in service of capturing intent)</h2>
        <div class="card" style="margin-bottom:32px">
          <p style="font-size:18px;margin:0"><strong>Strategy:</strong> Own the Commercial Critical Question (CCQ).</p>
          <p style="color:var(--muted);margin:12px 0 0">"Given my situation and constraints, who should I pick and why?"</p>
          <p style="color:var(--muted);margin:12px 0 0">Your page must answer that CCQ so well that AI cites it and the buyer clicks to act.</p>
        </div>

        <h3 style="margin-bottom:16px">Tactics that serve the strategy</h3>
        <ul class="list">
          <li><strong>Claim (≤18 tokens):</strong> State the verdict you want the model to repeat.</li>
          <li><strong>Proof snapshot:</strong> Above-fold table + tiny CSV with outcomes, integrations, constraints handled.</li>
          <li><strong>Comparison row:</strong> One line that differentiates you on the CCQ (e.g., "SOC-2 + SSO in 7 days").</li>
          <li><strong>Implementation readiness:</strong> Checklist that de-risks adoption.</li>
          <li><strong>JSON-LD graph:</strong> Org/Person/Article/Dataset with sameAs to align identity.</li>
          <li><strong>Cross-posting:</strong> Summary to Substack/Medium; dataset to GitHub; both link to the canonical page.</li>
          <li><strong>CTA design:</strong> "Book a 15-min triage" or "Start trial" above the fold.</li>
        </ul>

        <div style="margin-top:32px">
          <PipelineDiagram />
        </div>
      </div>
    </section>

    <section class="section">
      <div class="wrap">
        <h2 class="h2">What you get (one canonical page that captures action)</h2>
        <div class="grid two">
          <div>
            <h3 style="margin-bottom:16px">Your Claim Page (per idea)</h3>
            <ul class="list">
              <li>H1 ≤18 tokens • 2-sentence TL;DR • 3 pull-quotes</li>
              <li>Proof table + CSV download (metrics, integrations, constraints)</li>
              <li>JSON-LD validated (Org/Person/Article/Dataset)</li>
              <li>Screenshots of "appeared/cited" tests on seeded CCQs</li>
              <li>Conversion wiring: above-fold CTA + scheduler + "AI Answers" channel</li>
            </ul>
          </div>
          <div class="card">
            <h3 style="margin-bottom:16px">What we measure first:</h3>
            <p><strong>AAQM</strong> (Answer-Attributed Qualified Meetings) and <strong>AAP($)</strong> (pipeline).</p>
            <p style="margin-top:16px;color:var(--muted);">Citations are inputs. Meetings are outcomes.</p>
            <ProofCard />
          </div>
        </div>
      </div>
    </section>

    <section class="section">
      <div class="wrap">
        <h2 class="h2">Examples of CCQs we engineer you to win</h2>
        <div class="grid three">
          <div class="card">
            <p>"Which SOC-2-ready AI phone system works with HubSpot and SSO this quarter?"</p>
          </div>
          <div class="card">
            <p>"Best FP&A AI for multi-entity SaaS with QuickBooks + NetSuite, &lt;$10k MRR?"</p>
          </div>
          <div class="card">
            <p>"Which B2B positioning firm specializes in fintech workflows and has a 4-week sprint?"</p>
          </div>
        </div>
        <div style="margin-top:32px">
          <AnswerCard />
        </div>
      </div>
    </section>

    <section class="section">
      <div class="wrap">
        <p class="kicker">Packages</p>
        <h2 class="h2">Three ways to work with us</h2>
        <div class="price-grid">
          <div class="price-card">
            <h3>BTA-01 — Claim Kit</h3>
            <div class="amt">$1,500</div>
            <p style="color:var(--muted);margin-bottom:20px">5 days</p>
            <ul class="list" style="font-size:14px">
              <li>H1/TL;DR/quotes</li>
              <li>Proof table + CSV</li>
              <li>JSON-LD • CTA copy</li>
              <li>Design wire</li>
            </ul>
            <div class="bar" style="margin-top:24px">
              <a href="/wizard" class="btn" data-cta>Order Claim Kit</a>
            </div>
          </div>
          <div class="price-card featured">
            <h3>BTA-02 — Challenger Sprint</h3>
            <div class="amt">$7,500</div>
            <p style="color:var(--muted);margin-bottom:20px">3 weeks</p>
            <ul class="list" style="font-size:14px">
              <li>Page live • cross-posts</li>
              <li>GitHub dataset</li>
              <li>Answer tests (screenshots)</li>
              <li>CTA & analytics wired</li>
              <li>10 curator drafts</li>
            </ul>
            <div class="bar" style="margin-top:24px">
              <a href="/wizard" class="btn" data-cta>Book the Sprint</a>
            </div>
          </div>
          <div class="price-card">
            <h3>BTA-03 — Compound Plan</h3>
            <div class="amt">$2,500/mo</div>
            <p style="color:var(--muted);margin-bottom:20px">Ongoing</p>
            <ul class="list" style="font-size:14px">
              <li>1 micro-update + 1 support post/month</li>
              <li>Weekly tests + 3 curator follow-ups</li>
              <li>Monthly AAQM/AAP report</li>
            </ul>
            <div class="bar" style="margin-top:24px">
              <a href="/wizard" class="btn btn--outline">Start compounding</a>
            </div>
          </div>
        </div>
      </div>
    </section>

    <section class="section">
      <div class="wrap">
        <p class="kicker">Risk reversals</p>
        <h2 class="h2">We de-risk the outcome</h2>
        <GuaranteesStrip />
        <div class="grid three" style="margin-top:32px">
          <div class="card">
            <h3>Fit-or-Free (Wizard)</h3>
            <p>3 claims ≥85 with 5+ credible sources—or refund.</p>
          </div>
          <div class="card">
            <h3>Appearance Guarantee (Sprint)</h3>
            <p>At least one "appeared or cited" screenshot on a seeded CCQ in 4 weeks—or an extra week free + added proof.</p>
          </div>
          <div class="card">
            <h3>Meeting-Backed Credit (Compound)</h3>
            <p>AAQM = 0 after 60 days (with timely approvals)—credit next month.</p>
          </div>
        </div>
      </div>
    </section>

    <section class="section">
      <div class="wrap">
        <p class="kicker">FAQ</p>
        <h2 class="h2">Straight answers</h2>
        <dl class="faq">
          <dt>Isn't ranking #1 on Google enough?</dt>
          <dd>Not when buyers ask LLMs for a verdict. AEO puts you where the decision happens.</dd>

          <dt>Do we need lots of content?</dt>
          <dd>No. You need one canonical page per idea with proof near the top, refreshed monthly.</dd>

          <dt>How fast can we see movement?</dt>
          <dd>Typically 2–6 weeks if you have any authority. You get before/after screenshots.</dd>
        </dl>
      </div>
    </section>

    <section class="section" style="border-bottom:none">
      <div class="wrap">
        <div class="card" style="display:flex;justify-content:space-between;align-items:center;flex-wrap:wrap;gap:24px;padding:40px">
          <div>
            <h2 class="h2" style="margin:0 0 12px">Own the claim. Win the click. Close the deal.</h2>
            <div class="bar">
              <a href="/wizard" class="btn" data-cta style="flex-shrink:0">Get your Claim Dossier</a>
              <a href="/guarantees" class="btn btn--outline">See our Guarantees</a>
            </div>
          </div>
        </div>
      </div>
    </section>

    <footer class="footer">
      <div class="wrap footer-flex">
        <small>© {new Date().getFullYear()} Become The Answer</small>
        <nav>
          <a href="/wizard">Services</a>
          <a href="/claim/18-token-rule">Resources</a>
          <a href="/guarantees">Guarantees</a>
        </nav>
      </div>
    </footer>

    <script>
      const ref = document.referrer || '';
      fetch('/api/events', {
        method: 'POST',
        headers: { 'content-type': 'application/json' },
        body: JSON.stringify({
          claim_slug: 'home',
          page: '/',
          referrer: ref,
          event_type: 'session'
        })
      }).catch(() => {});

      document.querySelectorAll('[data-cta]').forEach(el => {
        el.addEventListener('click', () => {
          fetch('/api/events', {
            method: 'POST',
            headers: { 'content-type': 'application/json' },
            body: JSON.stringify({
              claim_slug: 'home',
              page: '/',
              event_type: 'cta_click'
            })
          }).catch(() => {});
        });
      });
    </script>
  </body>
</html>
