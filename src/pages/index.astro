---
import JSONLD from '../shared/JSONLD.astro';
import PipelineFlow from '../shared/PipelineFlow.astro';

export const prerender = false;

const siteGraph = [
  {
    "@type": "Organization",
    "name": "Become The Answer",
    "url": "https://becometheanswer.ai",
    "logo": "https://becometheanswer.ai/og-logo.png",
    "sameAs": ["https://www.linkedin.com/company/becometheanswer"]
  },
  {
    "@type": "Service",
    "name": "AEO — AI Visibility & Conversion",
    "provider": {"@type":"Organization","name":"Become The Answer"},
    "description": "Claim → Cite → Close for challenger brands: claim page, evidence + schema, conversion-first design.",
    "areaServed": "Global",
    "url": "https://becometheanswer.ai"
  }
];
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <title>Become the Answer — AI Search Visibility for E-commerce</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content="Make your products visible, quotable, and purchasable inside AI answers. We help e-commerce stores win AI-shopping with agent-ready data and content." />
    <link rel="canonical" href="https://becometheanswer.ai/" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Space+Grotesk:wght@700;800&family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
    <JSONLD graph={siteGraph} />
    <style>
      :root{
        --violet-900:#1A1033;--violet-800:#241445;--violet-700:#39206B;--violet-600:#5A3AF5;--violet-500:#7A5CFF;--violet-400:#A08BFF;
        --teal-500:#31D0C6;--magenta-500:#FF4D9D;
        --bg-950:#0A0B0D;--bg-900:#101322;--panel-800:#111319;--stroke-700:#1B1F29;
        --ink-100:#F3F1FF;--ink-300:#D7D2FF;--ink-500:#9EA3C7;
        --ok:#20C997;--warn:#FFB02E;--danger:#FF6B6B;
        --grad-answer:linear-gradient(135deg,var(--violet-600) 0%,var(--violet-400) 55%,var(--teal-500) 100%);
        --grad-iris:linear-gradient(160deg,#2B1A47 0%,#39206B 60%,#5A3AF5 100%);
        --shadow:0 10px 30px rgba(0,0,0,.35);
        --font-h:'Space Grotesk',ui-sans-serif,system-ui;
        --font-b:'Inter',ui-sans-serif,system-ui;
      }
      *{box-sizing:border-box;margin:0;padding:0}
      html{scroll-behavior:smooth}
      body{margin:0;padding:0;background:var(--bg-950);color:var(--ink-300);font:17px/1.6 var(--font-b);-webkit-font-smoothing:antialiased;-moz-osx-font-smoothing:grayscale}
      a{color:var(--teal-500);text-decoration:none;transition:all 0.2s cubic-bezier(.2,.6,.2,1)}
      a:hover{color:var(--ink-100)}
      .wrap{max-width:1120px;margin:0 auto;padding:0 24px}
      .btn{display:inline-flex;gap:10px;align-items:center;padding:14px 24px;border-radius:12px;border:1px solid transparent;font:700 15px var(--font-b);letter-spacing:-0.01em;transition:all 0.2s cubic-bezier(.2,.6,.2,1);cursor:pointer}
      .btn-primary{background:var(--grad-answer);color:#0B0C10;box-shadow:0 0 0 0 rgba(122,92,255,0.4)}
      .btn-primary:hover{filter:brightness(1.1);box-shadow:0 0 0 8px rgba(122,92,255,0.15);transform:translateY(-2px)}
      .btn-secondary{background:transparent;border-color:var(--stroke-700);color:var(--ink-100)}
      .btn-secondary:hover{border-color:var(--violet-500);background:rgba(122,92,255,0.1)}
      .ribbon{background:var(--grad-iris);border-bottom:1px solid var(--stroke-700);padding:14px 0;text-align:center;font-size:14px;line-height:1.5;color:var(--ink-300);font-weight:500}
      .hero{padding:80px 0 60px;background:var(--bg-950);position:relative;overflow:hidden;border-bottom:1px solid var(--stroke-700)}
      .hero::before{content:'';position:absolute;top:-200px;right:-200px;width:600px;height:600px;background:radial-gradient(circle,rgba(90,58,245,0.15) 0%,transparent 70%);border-radius:50%;animation:pulse 12s ease-in-out infinite}
      @keyframes pulse{0%,100%{transform:scale(1) rotate(0deg);opacity:0.4}50%{transform:scale(1.2) rotate(180deg);opacity:0.6}}
      .hero-grid{display:grid;grid-template-columns:1.1fr .9fr;gap:50px;align-items:center;position:relative;z-index:1}
      .h1{font:800 56px/1.05 var(--font-h);letter-spacing:-0.02em;color:var(--ink-100);margin:0 0 16px}
      .h2{font:800 40px/1.15 var(--font-h);color:var(--ink-100);letter-spacing:-0.02em;margin:0 0 16px}
      .h3{font:700 24px/1.3 var(--font-h);color:var(--ink-100);margin:0 0 12px}
      .subhead{font:500 24px/1.4 var(--font-b);color:var(--ink-300);margin:0 0 12px;letter-spacing:-0.01em}
      .kicker{font:700 12px/1.5 var(--font-b);letter-spacing:.14em;text-transform:uppercase;color:var(--ink-500);margin:0 0 10px}
      .lead{font:400 18px/1.7 var(--font-b);color:var(--ink-300);margin:0 0 24px;max-width:800px}
      .chips-label{font:600 13px var(--font-b);letter-spacing:0.05em;text-transform:uppercase;color:var(--teal-500);margin:0 0 12px;display:flex;align-items:center;gap:8px}
      .chips-label::before{content:'';width:20px;height:2px;background:var(--grad-answer);border-radius:999px}
      .chips{display:flex;gap:10px;flex-wrap:wrap;margin:0 0 32px}
      .chip{display:inline-flex;align-items:center;gap:8px;padding:10px 18px;border-radius:999px;background:#0E1118;border:1px solid var(--stroke-700);color:#CFE9E7;font-size:14px;font-weight:600;transition:all 0.3s cubic-bezier(.2,.6,.2,1);position:relative;overflow:hidden}
      .chip::before{content:'';position:absolute;top:0;left:-100%;width:100%;height:100%;background:linear-gradient(90deg,transparent,rgba(49,208,198,0.2),transparent);transition:left 0.5s ease}
      .chip:hover{border-color:var(--teal-500);background:rgba(49,208,198,0.15);transform:translateY(-2px) scale(1.05);box-shadow:0 4px 12px rgba(49,208,198,0.2)}
      .chip:hover::before{left:100%}
      .trust-strip{display:flex;gap:32px;align-items:center;justify-content:center;flex-wrap:wrap;margin:48px 0 0;padding:24px;opacity:0.6;filter:grayscale(1)}
      .trust-badge{font:600 14px var(--font-b);color:var(--ink-500);display:flex;align-items:center;gap:8px}
      .trust-badge::before{content:'✓';color:var(--ok);font-size:16px}
      .bar{display:flex;gap:12px;flex-wrap:wrap;margin:24px 0}
      .section{padding:80px 0;border-bottom:1px solid var(--stroke-700)}
      .card{background:var(--panel-800);border:1px solid var(--stroke-700);border-radius:16px;padding:24px;transition:all 0.3s cubic-bezier(.2,.6,.2,1);box-shadow:0 1px 0 var(--stroke-700) inset}
      .card:hover{border-color:var(--violet-600);box-shadow:0 1px 0 var(--stroke-700) inset,var(--shadow);transform:translateY(-4px)}
      .grid{display:grid;gap:32px}
      .two{grid-template-columns:repeat(2,1fr)}
      .three{grid-template-columns:repeat(3,1fr)}
      .list{margin:0;padding:0 0 0 24px;line-height:1.9}
      .list li{margin:12px 0;color:var(--ink-300)}
      .list li strong{color:var(--ink-100);font-weight:600}
      .price-grid{display:grid;grid-template-columns:repeat(3,1fr);gap:24px;margin-top:32px}
      .price-card{padding:32px;border:2px solid var(--stroke-700);border-radius:16px;background:var(--panel-800);transition:all 0.3s ease;position:relative}
      .price-card:hover{border-color:var(--violet-500);transform:translateY(-6px);box-shadow:var(--shadow)}
      .price-card.featured{border-color:var(--violet-600);background:var(--grad-iris)}
      .price-card.featured::before{content:'MOST POPULAR';position:absolute;top:16px;right:-30px;background:var(--grad-answer);color:#0B0C10;padding:4px 40px;font-size:10px;font-weight:700;letter-spacing:0.1em;transform:rotate(45deg)}
      .price-card h3{margin:0 0 8px;font-size:22px;color:var(--ink-100);font-weight:700}
      .price-card .amt{font-size:36px;font-weight:800;margin:12px 0 24px;background:var(--grad-answer);-webkit-background-clip:text;-webkit-text-fill-color:transparent;background-clip:text}
      .faq dt{font-weight:700;margin:24px 0 8px;font-size:18px;color:var(--ink-100)}
      .faq dd{margin:0 0 16px;color:var(--ink-300);line-height:1.7}
      .footer{padding:40px 0;background:var(--bg-900);border-top:1px solid var(--stroke-700);color:var(--ink-500)}
      .footer-flex{display:flex;justify-content:space-between;align-items:center;flex-wrap:wrap;gap:16px}
      .footer nav{display:flex;gap:20px}
      .footer a{color:var(--ink-500);font-weight:500;transition:color 0.2s ease}
      .footer a:hover{color:var(--teal-500)}
      .divider{height:6px;background:var(--grad-answer);border-radius:999px;margin:24px 0}
      table{border-collapse:collapse;font-size:15px;width:100%}
      table thead tr{background:var(--grad-iris)}
      table th{padding:16px;text-align:left;border:1px solid var(--stroke-700);font-weight:600;color:var(--ink-100)}
      table td{padding:14px;border:1px solid var(--stroke-700);color:var(--ink-300);line-height:1.6}
      table tbody tr{background:var(--panel-800);transition:background 0.2s ease}
      table tbody tr:hover{background:rgba(90,58,245,0.1)}
      table tbody tr td strong{color:var(--ink-100);font-weight:600}
      @media(prefers-reduced-motion:reduce){*{animation:none !important;transition:none !important}}
      @media(max-width:980px){
        .hero-grid,.two,.three,.price-grid{grid-template-columns:1fr}
        .h1{font-size:42px}
        .h2{font-size:32px}
        .subhead{font-size:20px}
        .hero{padding:50px 0 40px}
        .section{padding:50px 0}
      }
    </style>
  </head>
  <body>
    <header class="hero">
      <div class="wrap">
        <div style="text-align:center;max-width:900px;margin:0 auto">
          <p class="kicker">AI SEARCH VISIBILITY, CONTENT OPERATIONS AND CONVERSION SERVICES FOR E-COMMERCE</p>
          <h1 class="h1">Become the Answer shoppers click then buy.</h1>
          <p class="subhead">We make your products visible, quotable, and purchasable inside AI answers (ChatGPT, Perplexity, Google AI)—so long-tail, high-intent queries land on your PDPs.</p>
          <div class="bar" style="justify-content:center">
            <a href="#audit" class="btn btn-primary" data-cta>Get your Free Audit</a>
            <a href="#contact" class="btn btn-secondary">Talk to a human</a>
          </div>
          <div class="trust-strip">
            <span class="trust-badge">Shopify</span>
            <span class="trust-badge">Stripe/PayPal compatible</span>
            <span class="trust-badge">OpenAI/ACP-ready</span>
          </div>
        </div>
        <div style="margin-top:48px">
          <PipelineFlow />
        </div>
      </div>
    </header>

    <section class="section">
      <div class="wrap">
        <h2 class="h2" style="text-align:center">There's a Generational Opportunity to win AI-Shopping, but most stores don't show up</h2>
        <p class="lead" style="text-align:center;max-width:800px;margin:0 auto 48px">Buyers now ask AI specific, high-intent questions; the model returns a short list and one link gets the click, at no cost to you.</p>

        <div class="grid two" style="gap:24px">
          <div class="card">
            <h3 class="h3" style="color:var(--danger)">❌ Product data isn't agent-readable</h3>
            <p>Missing attributes, messy variants, no clean feed → the AI can't match your SKUs to the query.</p>
          </div>
          <div class="card">
            <h3 class="h3" style="color:var(--danger)">❌ Pages aren't quotable</h3>
            <p>Long, vague copy gets summarized; dense answers and FAQs get cited.</p>
          </div>
          <div class="card">
            <h3 class="h3" style="color:var(--danger)">❌ Proof is buried</h3>
            <p>Reviews, specs, and ship-by promises aren't near the top, so credit (and clicks) go elsewhere.</p>
          </div>
          <div class="card">
            <h3 class="h3" style="color:var(--danger)">❌ No "answer" content</h3>
            <p>There's no canonical page for the exact question shoppers ask (age/theme/constraint).</p>
          </div>
        </div>

        <div class="card" style="margin:32px auto;max-width:600px;text-align:center;background:rgba(255,107,107,0.1);border-color:#FF6B6B">
          <h3 class="h3" style="color:#FF6B6B">❌ Measurement stops at sessions</h3>
          <p>You're not tracking AI-attributed visits, citation CTR, or downstream orders.</p>
        </div>

        <p style="text-align:center;font-size:20px;font-weight:600;color:var(--ink-100);margin-top:48px">
          If you're not structured, quotable, and in-feed, you're invisible no matter your Google rankings.
        </p>
      </div>
    </section>

    <section class="section">
      <div class="wrap">
        <h2 class="h2" style="text-align:center">Agentic Commerce, done right</h2>
        <p class="lead" style="text-align:center;max-width:800px;margin:0 auto 48px">We make your catalog agent-ready across three layers—Visibility, Answers, Conversion—so AI can find you, cite you, and send qualified shoppers to checkout.</p>

        <div class="grid three" style="margin-top:48px">
          <div class="card">
            <h3 class="h3" style="color:var(--teal-500)">Visibility (Data & Schema)</h3>
            <p>Clean product feeds, normalized attributes, and JSON-LD so agents can match your items to long-tail intent.</p>
          </div>
          <div class="card">
            <h3 class="h3" style="color:var(--violet-500)">Answers (Content)</h3>
            <p>Quote-ready Answer Pages, FAQs/How-Tos, and comparisons surfaced from reviews/support—so the model cites you.</p>
          </div>
          <div class="card">
            <h3 class="h3" style="color:var(--ok)">Conversion (On-site)</h3>
            <p>PDP deep-links, preview/ship-by cues, and clean CTAs—so cited traffic adds to cart and buys.</p>
          </div>
        </div>
      </div>
    </section>

    <section class="section">
      <div class="wrap">
        <h2 class="h2" style="text-align:center;margin-bottom:48px">Six ways we make your store agent-ready</h2>

        <div class="grid two" style="gap:24px">
          <div class="card">
            <h3 class="h3">1. Agent-ready product data</h3>
            <p style="margin-bottom:12px"><strong>What it is:</strong> Attribute normalization (age, size, material, compatibility, ship times), variant cleanup, and partner/ACP feed submission.</p>
            <p><strong>Why it matters:</strong> AI can't recommend what it can't parse. Clean data wins matching for specific queries.</p>
          </div>

          <div class="card">
            <h3 class="h3">2. Quote-ready Answer Pages</h3>
            <p style="margin-bottom:12px"><strong>What it is:</strong> One canonical page per recurring question (≤18-word claim, proof table + tiny CSV, FAQ & How-To).</p>
            <p><strong>Why it matters:</strong> Short, info-dense lines + tables get cited; citations drive qualified clicks.</p>
          </div>

          <div class="card">
            <h3 class="h3">3. Review-mined FAQs & comparisons</h3>
            <p style="margin-bottom:12px"><strong>What it is:</strong> We mine reviews, social, and support tickets to write the exact answers shoppers (and models) look for.</p>
            <p><strong>Why it matters:</strong> Removes friction, preserves attribution, and stops the model from citing someone else.</p>
          </div>

          <div class="card">
            <h3 class="h3">4. Technical SEO that helps AEO</h3>
            <p style="margin-bottom:12px"><strong>What it is:</strong> JSON-LD (Product/Offer/FAQ/HowTo/Review), internal links from collections/blog, clean canonicals/robots, image alts.</p>
            <p><strong>Why it matters:</strong> You stay fast, crawlable, and machine-legible—without bloating the theme.</p>
          </div>

          <div class="card">
            <h3 class="h3">5. Conversion cues for cited traffic</h3>
            <p style="margin-bottom:12px"><strong>What it is:</strong> PDP deep-links from Answer Pages (pre-selected options), preview/name builder, ship-by counters, trust badges.</p>
            <p><strong>Why it matters:</strong> Cited traffic is high-intent; give it the shortest path to add-to-cart.</p>
          </div>

          <div class="card">
            <h3 class="h3">6. Proof & measurement</h3>
            <p style="margin-bottom:12px"><strong>What it is:</strong> Baseline vs. after: AI-attributed sessions, citation CTR to PDP, ATC/checkout deltas, with screenshots of appearances.</p>
            <p><strong>Why it matters:</strong> You see the lift and know where to double down.</p>
          </div>
        </div>
      </div>
    </section>

    <section class="section">
      <div class="wrap">
        <h2 class="h2" style="text-align:center;margin-bottom:48px">We De-Risk the Outcome</h2>

        <div class="grid three" style="gap:24px">
          <div class="card" style="border-color:var(--ok)">
            <h3 class="h3" style="color:var(--ok)">1) Cited-or-We-Work-Free (Tier 1)</h3>
            <p>Within 30 days of go-live, you'll have at least one "appeared/cited" screenshot for a seeded, long-tail product question (ChatGPT, Perplexity, or Google AI). If not, we work one extra week free and add an extra Answer Page update at no charge.</p>
          </div>
          <div class="card" style="border-color:var(--ok)">
            <h3 class="h3" style="color:var(--ok)">2) Feed & Schema Guarantee</h3>
            <p>Your product feed ingests and JSON-LD validates (Product/Offer/FAQ/HowTo/Review). If any validator or ingestion error appears in the first 30 days, we fix it free.</p>
          </div>
          <div class="card" style="border-color:var(--ok)">
            <h3 class="h3" style="color:var(--ok)">3) Measurement Transparency</h3>
            <p>You'll get a baseline vs. after report with AI-attributed sessions, citation→PDP CTR, ATC/checkout deltas, and screenshots. If the dashboard isn't fully wired, we finish it free.</p>
          </div>
        </div>

        <div class="card" style="margin:32px auto;max-width:900px;background:rgba(122,92,255,0.1);border-color:var(--violet-500)">
          <h3 class="h3">Eligibility guardrails</h3>
          <p>Up to 500 SKUs, reasonable traffic, access to reviews/support logs, and approval of recommended changes within 5 business days.</p>
        </div>
      </div>
    </section>

    <section class="section" id="pricing">
      <div class="wrap">
        <p class="kicker">Packages & Pricing</p>
        <h2 class="h2" style="text-align:center">Tier 1 — AI Visibility Optimization</h2>
        <div class="card" style="max-width:900px;margin:32px auto;background:var(--grad-iris)">
          <div style="display:flex;justify-content:space-between;align-items:center;margin-bottom:24px;flex-wrap:wrap;gap:16px">
            <div>
              <h3 class="h3" style="margin:0">10-day sprint</h3>
            </div>
            <div class="amt" style="margin:0">$5,000</div>
          </div>

          <h3 class="h3">What's included</h3>
          <ul class="list">
            <li>AEO & SEO Audit with prioritized fixes (effort × impact)</li>
            <li>Product data & description optimization (intent-matching titles, ≤18-word claims where it counts, normalized attributes/variants)</li>
            <li>Feed & registration (partner/ACP where applicable)</li>
            <li>On-site content: FAQ & How-To blocks per product/collection, comparison rows</li>
            <li>Technical SEO: JSON-LD (Product/Offer/FAQ/HowTo/Review), internal links, canonicals/robots, image alts</li>
            <li>Post-optimization report: citations/appearances, CTR→PDP, ATC/checkout deltas, screenshots, 30-day plan</li>
          </ul>

          <p style="margin-top:24px;color:var(--ink-300)"><strong>Timeline:</strong> 10 days</p>
          <p style="margin-top:8px;color:var(--ink-300)"><strong>Inputs:</strong> catalog export, top SKUs, policies/shipping, review & support access</p>

          <div class="bar" style="margin-top:32px">
            <a href="#audit" class="btn btn-primary" data-cta>Get your Free Audit</a>
            <a href="#contact" class="btn btn-secondary">Talk to a human</a>
          </div>
        </div>

        <div class="grid two" style="gap:24px;margin-top:48px">
          <div class="card" style="opacity:0.7">
            <div style="display:inline-block;padding:4px 12px;background:var(--warn);color:#0B0C10;border-radius:6px;font-weight:700;font-size:12px;margin-bottom:16px">COMING SOON</div>
            <h3 class="h3">Tier 2: Agentic Engagement & Reputation</h3>
            <div class="amt" style="font-size:24px">$5,000 setup</div>
            <p style="margin:8px 0 16px;color:var(--ink-500)">+ performance commission (per recovered sale / resolved issue)</p>
            <ul class="list" style="font-size:14px">
              <li>Social listening & review monitoring with suggested responses (approve → post)</li>
              <li>On-site agent: product guide/Q&A trained on your catalog & policies</li>
              <li>Cart abandonment rescue via web/SMS/email with context-aware nudges</li>
              <li>Upsell/Cross-sell rules (compatibility, bundles, ship-by deadlines)</li>
              <li>Reporting: recovered revenue, response SLAs, sentiment shifts</li>
            </ul>
            <p style="margin-top:16px;font-size:13px;color:var(--ink-500)"><strong>Commission model (examples):</strong> 3–8% of incremental recovered revenue (configurable)</p>
            <div class="bar" style="margin-top:24px">
              <a href="#waitlist" class="btn btn-secondary">Join the Tier 2 waitlist</a>
            </div>
          </div>

          <div class="card" style="opacity:0.7">
            <div style="display:inline-block;padding:4px 12px;background:var(--warn);color:#0B0C10;border-radius:6px;font-weight:700;font-size:12px;margin-bottom:16px">COMING SOON</div>
            <h3 class="h3">Tier 3: Content OS + Distribution</h3>
            <div class="amt" style="font-size:24px">$10,000 setup</div>
            <p style="margin:8px 0 16px;color:var(--ink-500)">+ $5,000/month</p>
            <ul class="list" style="font-size:14px">
              <li>Weekly recording → micro-content factory (1 long post, 1 short post, 5–10 clips), all pointing to Answer Pages</li>
              <li>Creator/UGC program with TikTok Shop & YouTube Shop hooks (codes, briefs, deliverables)</li>
              <li>Paid amplification of UGC + retargeting to Answer-page viewers (strict CAC guardrails)</li>
              <li>Answer Page cadence: monthly micro-updates, new pages for emerging questions</li>
              <li>Analytics: AAQ (AI-attributed) funnel, ROAS, creator CPA/LTV</li>
            </ul>
            <div class="bar" style="margin-top:24px">
              <a href="#waitlist" class="btn btn-secondary">Join tier 3 waitlist</a>
            </div>
          </div>
        </div>
      </div>
    </section>

    <section class="section">
      <div class="wrap">
        <div class="grid two" style="gap:48px;align-items:start">
          <div>
            <h2 class="h2">What we need from you (for Tier 1)</h2>
            <ul class="list">
              <li>Shopify (or platform) access, catalog export, brand/voice guardrails</li>
              <li>Review & support logs for FAQ mining</li>
              <li>Approver who can sign off changes within 48–72 hours</li>
            </ul>
          </div>
          <div>
            <h2 class="h2">Success metrics we track by default</h2>
