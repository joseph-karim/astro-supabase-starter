          <div class="pillar-icon">
            <svg width="48" height="48" viewBox="0 0 48 48" fill="none">
              <path d="M12 36L24 8L36 36" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
              <path d="M16 28H32" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
              <circle cx="24" cy="40" r="4" fill="currentColor"/>
            </svg>
          </div>
