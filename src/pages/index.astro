            <path d="M0 10 L60 10" stroke="#E67E22" stroke-width="2" stroke-dasharray="6 4">
              <animate attributeName="stroke-dashoffset" from="0" to="-20" dur="0.8s" repeatCount="indefinite"/>
            </path>
            <polygon points="68,10 58,5 58,15" fill="#E67E22"/>
          </g>
          
          <!-- Step 3 -->
          <g transform="translate(650, 20)">
            <rect width="200" height="140" rx="12" fill="#ECFDF5" stroke="#059669" stroke-width="1.5"/>
            <text x="100" y="50" font-family="Inter" font-size="32" text-anchor="middle">ðŸ›’</text>
            <text x="100" y="85" font-family="Inter" font-size="13" font-weight="600" fill="#059669" text-anchor="middle">Customer Buys</text>
            <text x="100" y="105" font-family="Inter" font-size="11" fill="#047857" text-anchor="middle">From your store</text>
            <text x="100" y="125" font-family="Inter" font-size="10" fill="#047857" text-anchor="middle">Zero ad spend</text>
          </g>
        </svg>
      </div>
    </div>
  </section>

  <!-- ===== WHAT YOU GET ===== -->
  <section class="section" id="services">
    <div class="container">
      <div class="section-header" data-reveal>
        <p class="overline">What You Get</p>
