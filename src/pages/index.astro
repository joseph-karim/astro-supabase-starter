---
import Layout from '../components/Layout.astro';
import JSONLD from '../shared/JSONLD.astro';

export const prerender = false;

const siteGraph = [
  {
    "@type": "Organization",
    "name": "Become The Answer",
    "url": "https://becometheanswer.ai",
    "logo": "https://becometheanswer.ai/og-logo.png"
  },
  {
    "@type": "Service",
    "name": "AI Answer Citation Sprint",
    "provider": {"@type":"Organization","name":"Become The Answer"},
    "description": "We make your products visible, quotable, and purchasable inside AI answers so high-intent shoppers find you first.",
    "areaServed": "Global",
    "url": "https://becometheanswer.ai"
  }
];
---

<Layout title="Become the Answer | AI Search Visibility for E-commerce">
