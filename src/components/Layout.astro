---
import "../../src/styles/globals.css";
import Footer from "./Footer.astro";
import Header from "./Header.astro";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Space+Grotesk:wght@700;800&family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
    <title>{title}</title>
    <style>
      body {
        background: #0A0B0D;
        font-family: 'Inter', ui-sans-serif, system-ui;
      }
    </style>
  </head>
  <body class="px-4 antialiased sm:px-8 text-[#D7D2FF] min-h-screen">
    <Header />
    <main class="w-full max-w-4xl mx-auto grow py-8">
      <slot />
    </main>
    <Footer />
  </body>
</html>
